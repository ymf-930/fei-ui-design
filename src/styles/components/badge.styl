.fei-badge {
  position: relative;
  display: inline-block;
}
.fei-badge__content {
  background-color: var(--fei-color-danger);
  border-radius: 10px;
  color: #fff;
  display: inline-block;
  font-size: 12px;
  min-width: 20px;
  height: 20px;
  padding: 0 6px;
  text-align: center;
  white-space: nowrap;
  border: 1px solid #fff;
  line-height: var(--fei-base-line-height);
  &.is-dot {
    height: 8px;
    width: 8px;
    min-width: 8px;
    padding: 0;
    right: 0;
    border-radius: 50%;
  }
  &.is-fixed {
    position: absolute;
    top: 0;
    right: 10px;
    transform: translateY(-50%) translateX(100%);
    &.is-dot {
      right: 5px;
    }
  }
}

.fei-badge-is-primary {
  background-color: var(--fei-color-primary);
}
.fei-badge-is-warning {
  background-color: var(--fei-color-warning);
}

