.fei-timeline {
  list-style: none;
  margin: 0;
  padding: 0;
  &-item {
    margin: 0 !important;
    padding: 0 0 12px 0;
    list-style: none;
    position: relative;
    line-height: var(--fei-base-line-height);
    &-tail {
      position: absolute;
      left: 5px;
      top: 28%;
      height: 70%;
      border-left: 2px solid  #e8eaec;
    }
    &-pending &-tail {
      display: none;
    }
    &-head {
      position: absolute;
      top: 3px;
      width: 12px;
      height: 12px;
      background-color: #fff;
      border-radius: 50%;
      border: 3px solid transparent;
      &-primary {
        border-color: var(--fei-color-primary);
        color: var(--fei-color-primary);
      }
      &-success {
        border-color: var(--fei-color-success);
        color: var(--fei-color-success);
      }
      &-info {
        border-color: var(--fei-color-info);
        color: var(--fei-color-info);
      }
      &-warning {
        border-color: var(--fei-color-warning);
        color: var(--fei-color-warning);
      }
      &-danger {
        border-color: var(--fei-color-danger);
        color: var(--fei-color-danger);
      }
    }

    &-head-custom {
      width: 40px;
      height: auto;
      padding: 2px 0;
      text-align: center;
      line-height: 1;
      border: 0;
      border-radius: 0;
      font-size: 14px;
      position: absolute;
      left: -13px;
      top: 8px;
      transform: translateY(-50%);
      .f-iconfont {
        font-size: 18px;
      }
    }
    &-content {
      padding: 1px 1px 10px 24px;
      font-size: var(--fei-font-size-default);
      position: relative;
      top: -3px;
      line-height: 1.5em;
    }

    &:last-child {
      .fei-timeline-item-tail {
        display: none;
      }
    }
  }
  &-pending &-item:nth-last-of-type(2) {
    .fei-timeline-item-tail {
      border-left: 2px dotted  #e8eaec;
    }
    .fei-timeline-item-content {
      min-height: 48px;
    }
  }
}
